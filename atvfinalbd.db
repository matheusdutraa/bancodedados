JOIN tb_Veiculo a
on g.Id = a.IdVeiculo;

SELECT g.nome, IdLocacoes FROM clientes g
JOIN tb_Veiculo a
ON g.id = a.IdVeiculo;

SELECT g.nome, a.IdLocacoes, c.nome FROM clientes g
JOIN tb_Veiculo a
ON g.Id = a.IdVeiculo
JOIN tb_Locacoes c
ON a.IdLocacoes = c.IdLocacoes;













































