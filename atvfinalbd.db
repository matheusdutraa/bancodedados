//Criação+Alteração

CREATE TABLE IF NOT EXISTS tb_Locacoes(
codigoCliente INT VARCHAR(45) NOT NULL,
codigoVeiculo INT VARCHAR(45) NOT NULL,
dataSaida DATE NOT NULL,
dataRetorno DATE NOT NULL
) DEFAULT charset=utf8;

ALTER TABLE tb_Locacoes
add column IdLocacoes INT first;

ALTER TABLE tb_Locacoes
add primary key(IdLocacoes);

//Tabela N P/ N

CREATE TABLE tb_Veiculo(
IdVeiculo INT NOT NULL auto_increment,
nome VARCHAR(45) NOT NULL,
tipo VARCHAR(45) NOT NULL,
locado BIT(1) NOT NULL,
primary key(Id),
foreign key (IdVeiculo) references clientes(Id),
foreign key (IdLocacoes) references tb_Locacoes(IdLocacoes) 
)default charset=utf8;

